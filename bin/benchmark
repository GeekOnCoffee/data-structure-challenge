#!/usr/bin/env ruby

$:.unshift File.join(File.dirname(File.dirname(__FILE__)), 'lib')
require 'benchmark'
require 'list'
require 'dict'

N = Integer(ARGV[0]) rescue 30_000_000

puts 'Benchmarking List'

Benchmark.bm do |b|

  list = List[]
  N.times { |i| list << i }
  b.report("[]\t") do
    N.times { |i| a = list[i] }
  end

  b.report("[]=\t") do
    N.times { |i| list[i] = i }
  end

  list = List[]
  b.report("<<\t") do
    N.times { |i| list << i }
  end

  list = List[]
  N.times { |i| list << i }
  b.report("pop\t") do
    N.times { list.pop }
  end

  list = List[]
  b.report("unshift\t") do
    N.times { |i| list.unshift i }
  end

  list = List[]
  N.times { |i| list << i }
  b.report("shift\t") do
    N.times { list.shift }
  end

end

puts 'Benchmarking Dict'

Benchmark.bm do |b|

  dict = Dict[]
  N.times { |i| dict[i] = 'a' }
  b.report("[]\t") do
    N.times { |i| a = dict[i] }
  end

  b.report("[]=\t") do
    N.times { |i| dict[i] = 'a' }
  end
end
